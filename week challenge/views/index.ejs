<!DOCTYPE html>
<html>
  <head>
    <title>User Profile</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f0f0f0;
        padding: 20px;
      }
      .container {
        background-color: #fff;
        border-radius: 5px;
        padding: 20px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        display: flex;
        flex-direction: column;
        align-items: flex-end;
      }
      h3 {
        margin-bottom: 0;
        padding-left: 1vw;
      }
      .logout-button {
        background-color: #ff6347;
        color: #fff;
        border: none;
        display: flex;
        justify-content: flex-end;
        padding: 12px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
        margin-bottom: 10px;
      }
      .logout-button:hover {
        background-color: #ff4433;
      }

      .add-blog-button,
      .edit-blog-button,
      .delete-blog-button {
        background-color: #007bff;
        color: #fff;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
      }

      .add-blog-button:hover,
      .edit-blog-button:hover,
      .delete-blog-button:hover {
        background-color: #0056b3;
      }

      /* CSS for Blog Articles */
      .blog-article {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 5px;
        padding: 20px;
        margin: 20px 0;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
      }

      .blog-article h2 {
        font-size: 24px;
        margin-bottom: 10px;
        color: #333;
      }

      .blog-article p {
        font-size: 16px;
        line-height: 1.5;
        color: #666;
      }
    </style>
  </head>
  <body>
    <h3><%= escapeHtml(username) %></h3>
    <form action="users/logout" method="GET">
      <button class="logout-button" type="submit">Logout</button>
    </form>
    <!-- Add Blog Post Button -->
    <button class="add-blog-button" onclick="location.href='/blogs/new'">
      Add Blog Post
    </button>

    <!-- Edit Blog Post Button -->
    <button class="edit-blog-button" onclick="location.href='/blogs/edit'">
      Edit Blog Post
    </button>

    <!-- Delete Blog Post Button -->
    <button class="delete-blog-button" onclick="location.href='/blogs/delete'">
      Delete Blog Post
    </button>
    <div class="container">
      <!-- Display the blog articles here -->
      <div class="blog-articles">
        <% blogArticles.forEach(function(article) { %>
        <div class="blog-article">
          <h2><%= article.title %></h2>
          <p><%= article.content %></p>
          <!-- Add more details or buttons for editing/deleting articles if needed -->
        </div>
        <% }); %>
      </div>
    </div>
    <script></script>
  </body>
</html>
