<!DOCTYPE html>
<html>
  <head>
    <title>Product List</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.15/dist/tailwind.min.css"
    />
  </head>

  <body class="bg-gray-100">
    <div class="container mx-auto p-4">
      <h1 class="text-3xl font-semibold mb-4">Product List</h1>
      <!-- Search Bar -->
      <input
        id="searchInput"
        type="text"
        class="w-96 rounded  p-2 mb-4 bg-white"
        placeholder="Search products..."
        oninput="updateFilters()"
      />

      <!-- Price Filter -->
      <label for="minPrice">Min Price:</label>
      <input
        type="number"
        min="0"
        max="4000"
        id="minPrice"
        class="p-2 rounded mb-4 bg-white"
        placeholder="Min Price"
        oninput="updateFilters()"
      />

      <label for="maxPrice">Max Price:</label>
      <input
        type="number"
        min="0"
        max="4000"
        class="p-2 rounded mb-4 bg-white"
        id="maxPrice"
        placeholder="Max Price"
        oninput="updateFilters()"
      />

      <ul
        id="productList"
        class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4"
      >
        <% products.forEach(function(product) { %>
        <li
          class="product-card bg-white p-4 rounded shadow hover:shadow-lg transition-transform duration-300 transform hover:scale-105"
          data-category="<%= product.category %>"
        >
          <div class="flex">
            <div class="w-2/3">
              <img
                src="/images/<%= product.image %>"
                alt="<%= product.name %>"
                class="w-full h-48 object-cover rounded"
              />
            </div>
            <div class="w-1/3 p-2">
              <h2 class="text-lg font-semibold mb-2"><%= product.name %></h2>
              <p class="text-gray-700 mb-2"><%= product.description %></p>
              <p class="text-blue-500 text-lg mb-2">
                $<%= product.price.toFixed(2) %>
              </p>
              <button
                class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors duration-300"
              >
                Buy
              </button>
            </div>
          </div>
        </li>
        <% }); %>
      </ul>
    </div>
    <script>
      function updateFilters() {
          const searchQuery = document.getElementById("searchInput").value.toLowerCase();
          const minPrice = parseFloat(document.getElementById("minPrice").value);
          const maxPrice = parseFloat(document.getElementById("maxPrice").value);
  
          const productList = document.getElementById("productList").querySelectorAll(".product-card");
  
          productList.forEach((productCard) => {
              const productName = productCard.querySelector("h2").textContent.toLowerCase();
              const productPrice = parseFloat(productCard.querySelector(".text-blue-500").textContent.replace("$", ""));
  
              const isNameMatch = productName.includes(searchQuery);
              const isPriceMatch = (!minPrice || productPrice >= minPrice) && (!maxPrice || productPrice <= maxPrice);
  
              if (isNameMatch && isPriceMatch) {
                  productCard.style.display = "block";
              } else {
                  productCard.style.display = "none";
              }
          });
      }
  </script>
    
  </body>
</html>
